<div class="container"></div>
    <div class="row mt-5">   
        {{!-- <img src="../public/assets/img/1241302.png" class="img-fluid" alt="burger_img"> --}}
    </div>

    <div class="row mt-3">   
        <h1 class="text-center">Eat-Da-Burger!</h1>
    </div>

    <div class="row">
        <ul class="col-md-6">
            {{#each burgers}}
                {{#unless devoured}}
                    <div class="text-center">
                        <h5>{{this.burger_name}}</h5>
                    </div>
                {{/unless}}
            {{/each}}
        </ul>

        <ul class="col-md-6">
            {{#each burgers}}
                {{#if this.devoured}}
                    <div class="text-center">
                        <h5>{{burger_name}}</h5>
                    </div>
                {{/if}}
            {{/each}}
        </ul>
    </div>

    <div class="row mt-3"> 
        <form class="col-md-3 mx-auto">
            <label 
                for="newBurgerText">
            </label>
            <textarea 
                class="form-control" 
                id="newBurgerText" 
                rows="3">
            </textarea>
        </form>
    </div>

    <div class="row mt-2">
        <div class="div text-center">
            <button 
                type="submit" 
                class="btn btn-primary">
                Submit
            </button>
        </div>
    </div>

    <div class="div text-center mt-2">
        <p>Enter a burger you want to eat, then; click the "Submit" button!</p>
    </div>
</div>